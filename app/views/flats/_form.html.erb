<div class="container">
  <%= form_with(model: @flat, local: true) do |form| %>
    <% if @flat.errors.any? %>
      <div class="alert alert-danger">
        <h2><%= pluralize(@flat.errors.count, "error") %> prohibited this flat from being saved:</h2>
        <ul>
          <% @flat.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="card" style="background-color: #f8f9fa;">
      <div class="card-body">
        <h2 class="card-title mb-3">Add a New Flat</h2>

        <div class="mb-2">
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name, class: "form-control form-control-sm" %>
        </div>

        <div class="mb-2">
          <%= form.label :address, class: "form-label" %>
          <%= form.text_field :address, class: "form-control form-control-sm" %>
        </div>

        <div class="mb-2">
          <%= form.label :description, class: "form-label" %>
          <%= form.text_area :description, class: "form-control form-control-sm", rows: 3 %>
        </div>

        <div class="mb-2">
          <%= form.label :price_per_night, class: "form-label" %>
          <%= form.number_field :price_per_night, class: "form-control form-control-sm" %>
        </div>

        <div class="mb-2">
          <%= form.label :number_of_guests, class: "form-label" %>
          <%= form.number_field :number_of_guests, class: "form-control form-control-sm" %>
        </div>

        <div class="d-flex gap-2 mt-3">
          <%= form.submit "Create Flat", class: "btn btn-primary" %>
          <%= link_to "Cancel", flats_path, class: "btn btn-outline-danger" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<style>

  .container {
    max-width: 600px;
  }
</style>
